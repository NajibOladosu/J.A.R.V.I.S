{
  "name": "jarvis-ai-assistant",
  "version": "1.0.0",
  "description": "A futuristic AI assistant with GPT4All and ElectronJS",
  "main": "src/main-working.js",
  "scripts": {
    "start": "electron .",
    "start-simple": "electron src/main-simple.js",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "ai",
    "assistant",
    "jarvis",
    "electron",
    "gpt4all"
  ],
  "author": "JARVIS Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["../tests/test_frontend.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js"
    ],
    "setupFilesAfterEnv": [],
    "moduleNameMapper": {
      "^electron$": "<rootDir>/__mocks__/electron.js"
    },
    "testPathIgnorePatterns": ["/node_modules/"],
    "passWithNoTests": true
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.jarvis.ai-assistant",
    "productName": "JARVIS AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}